<div class="card shadow mb-4 mt-3">
    <div class="card-header py-3">
        <a href="/admin/item" class="btn btn-warning">Back</a>
      </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %> " alt="image" style="width:100%; display: block;">
                <div class="row ml-1">
                    <% if (booking.payments.status == 'Proses') { %>
                        <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="post">
                            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-check"></i>confirm</button>
                        </form>
                        <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="post" class="ml-2">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i>reject</button>
                        </form>
                        <% } %>
                </div>
            </div>
          <div class="col-md-8">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                        <th>Name</th>
                        <th>Total</th>
                        <th>Bank From</th>
                        <th>title</th>
                    </tr>
                    <tbody>
                        <tr>
                            <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %> </td>
                            <td><%= booking.total %> </td>
                            <td><%= booking.payments.bankFrom %></td>
                            <td><%= booking.itemId.title %></td>
                        </tr>
                    </tbody>
                  </tbody>
                </table>
              </div>
          </div>
        </div>
    </div>
  </div>