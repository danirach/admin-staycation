<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-3">
          <div class="card-body">
              <div class="row">
                  <div class="col-md-5">
                    <form action="/admin/item/add/feature" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                  <label for="Name">NamE</label>
                                  <input type="text" class="form-control" name="name" placeholder="Enter Name " required >
                                </div>
                                <div class="form-group">
                                  <label for="Name">QTY</label>
                                  <input type="text" class="form-control" name="qty" placeholder="Enter QTY" required >
                                </div>
                                <div class="form-group">
                                  <label for="Name">Image</label>
                                  <input type="file" class="form-control" name="image"required >
                                </div>
                                <input type="hidden" value="<%= itemId %>" name="itemId">
                          <button type="submit" class="btn btn-primary">Save changes</button>
                        </form>
                  </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                          <tr>
                              <th>No</th>
                              <th>Name</th>
                              <th>QTY</th>
                              <th>Image Url</th>
                              <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for( let i = 0; i < feature.length; i++ ) { %>
                            <tr>
                              <td><%= i+1 %> </td>
                              <td><%= feature[i].name %> </td>
                              <td><%= feature[i].qty %> </td>
                              <td>
                                <img src="https://admin-staycation69.herokuapp.com/<%= feature[i].imageUrl %> " alt="imageUrl" height="70px" width="70px">
                              </td>
                              <td>
                                <form action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE " method="post">
                                <a href="javascript:void()" type="button" class="btn btn-warning btn-sm button-update" 
                                data-id="<%= feature[i].id %>"
                                data-name="<%= feature[i].name %>"
                                data-qty="<%= feature[i].qty %>"
                                 ><i class="fas fa-edit"></i></a>
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                              </form>
                              </td>
                            </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                </div>
              </div>
          </div>
      
        </div>
  
    </div>